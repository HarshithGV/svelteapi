
<script>
	let a = 1;
	let b = 2;
</script>

<label>
	<input type=number bind:value={a} min=0 max=500>
	<br>
	<input type=range id="range" bind:value={a} min=0 max=500>
</label>

<label>
	<input type=number bind:value={b} min=0 max=500>
	<br>
	<input type=range id="range" bind:value={b} min=0 max=500>
</label>

<p>{a} + {b} = {a + b}</p>

<style>
	input {
		padding: 0.5rem;
	}
	label {
		text-align: center;
	}
	#range {
		width:25rem;
	}
</style>
